<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LostItemDetail"
    android:background="#ACA5A5">

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="429dp"
        android:layout_height="11dp"
        android:layout_above="@+id/detailsName"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailsImage" />


    <ProgressBar
        android:id="@+id/progress_bar2"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="429dp"
        android:layout_height="11dp"
        android:layout_above="@+id/detailsDescription"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        app:layout_constraintBottom_toTopOf="@+id/detailsDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailsUserName"
        app:layout_constraintVertical_bias="0.31" />

    <TextView
        android:id="@+id/detailsName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_item_24"

        android:text="TextView"

        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.285" />

    <TextView
        android:id="@+id/detailsLocation"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:drawableLeft="@drawable/ic_baseline_location_24"
        android:text="TextView"

        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/detailsName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/detailsName"
        app:layout_constraintTop_toBottomOf="@+id/detailsName"
        app:layout_constraintVertical_bias="0.025" />

    <TextView
        android:id="@+id/detailsTime"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_access_time_24"
        android:text="TextView"

        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/detailsLocation"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/detailsLocation"
        app:layout_constraintTop_toBottomOf="@+id/detailsLocation"
        app:layout_constraintVertical_bias="0.026" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/detailsDescription"
        app:layout_constraintEnd_toEndOf="@+id/detailsUserName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/detailsUserName" />

    <ImageView
        android:id="@+id/detailsImage"
        android:layout_width="204dp"
        android:layout_height="139dp"
        app:srcCompat="@drawable/ic_baseline_panorama_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027" />


    <TextView
        android:id="@+id/detailsUserName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:text="TextView"

        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/detailsTime"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/detailsTime"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.447" />

    <TextView
        android:id="@+id/detailsDescription"
        android:layout_width="300dp"
        android:layout_height="200dp"

        android:text="TextView"

        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/detailsUserName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/detailsUserName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.774" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/detailsDescription"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/detailsDescription"
        app:layout_constraintTop_toBottomOf="@+id/detailsDescription"
        app:layout_constraintVertical_bias="0.398">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonMessage"
            style="@style/Widget.LostFound.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:text="Message"
            app:strokeColor="@color/button"
            app:strokeWidth="2dp" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCall"
            style="@style/Widget.LostFound.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:text="Call"
            app:strokeColor="@color/button"
            app:strokeWidth="2dp" />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>