<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:id="@+id/lostitemparent"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp">


    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="290dp"
        android:paddingBottom="10dp">


        <TextView
            android:id="@+id/lostitemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lostitemimage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text="Name"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/lostitemLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lostitemName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Location"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lostitemTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lostitemLocation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Time"
            android:textStyle="bold" />




        <ImageView
            android:id="@+id/lostitemimage"
            android:layout_width="153dp"
            android:layout_height="175dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_launcher_background">

        </ImageView>

        <Button
            android:id="@+id/LostItemDetailsBtn"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_below="@+id/lostitemTime"


            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="Details"
            android:textSize="10dp" />

    </RelativeLayout>





</androidx.cardview.widget.CardView>