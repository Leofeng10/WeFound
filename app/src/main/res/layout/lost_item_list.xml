<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:id="@+id/lostitemparent"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp">


    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="290dp"
        android:paddingBottom="10dp">


        <TextView
            android:id="@+id/lostitemName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lostitemimage"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:text="Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lostitemLocation"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/lostitemName"
            android:layout_alignStart="@+id/lostitemName"
            android:layout_alignLeft="@+id/lostitemName"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="-2dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:text="Location"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/lostitemTime"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/lostitemLocation"
            android:layout_alignStart="@+id/lostitemLocation"
            android:layout_alignLeft="@+id/lostitemLocation"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:text="Time"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/lostitemimage"
            android:layout_width="153dp"
            android:layout_height="175dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_launcher_background">

        </ImageView>

        <Button
            android:id="@+id/LostItemDetailsBtn"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_below="@+id/lostitemTime"


            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="Details"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lostitemimage"


            android:layout_alignStart="@+id/lostitemimage"
            android:layout_alignLeft="@+id/lostitemimage"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="2dp"
            android:text="Item" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_marginStart="-1dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_toStartOf="@+id/lostitemLocation"
            android:layout_toLeftOf="@+id/lostitemLocation"
            android:text="Location" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_alignLeft="@+id/textView7"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:layout_toStartOf="@+id/lostitemTime"
            android:layout_toLeftOf="@+id/lostitemTime"
            android:text="Time" />

    </RelativeLayout>





</androidx.cardview.widget.CardView>