<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wefound">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WeFound">
        <activity android:name=".PostFoundItem"
            android:parentActivityName=".Found"></activity>
        <activity
            android:name=".MessageViewActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MessageActivity"
            android:parentActivityName=".Lost" />
        <activity
            android:name=".ResetPassword"
            android:parentActivityName=".Login" />
        <activity
            android:name=".LostItemDetail"
            android:parentActivityName=".Lost" />
        <activity
            android:name=".PostItem"
            android:parentActivityName=".Lost" />
        <activity
            android:name=".Register"
            android:parentActivityName=".Login" />
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UserInfoActivity" />
        <activity
            android:name=".Found"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Lost"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
    </application>

</manifest>